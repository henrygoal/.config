timeout 1200 'if ! pgrep -x swaylock;then swaylock -f -n -t -i  ~/.config/sway/images/screenlock.png;fi' 
timeout 1160 'hyprctl dispatch dpms off' 
timeout 10 'if pgrep -x swaylock;then hyprctl dispatch dpms off;fi' resume 'hyprctl dispatch dpms on' 
before-sleep 'swaylock -f -n -t -i  ~/.config/sway/images/screenlock.png'
