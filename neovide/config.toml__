fork = false
frame = "full"
idle = true
maximized = false
neovim-bin = "/usr/bin/nvim" # in reality found dynamically on $PATH if unset
no-multigrid = false
srgb = false
tabs = true
theme = "auto"
title-hidden = true
vsync = true
wsl = false

[font]
normal = ["MonoLisa Nerd Font"] # Will use the bundled Fira Code Nerd Font by default
bold = ["Noto Sans CJK SC"]
size = 12.0
hinting = "slight"
edging = "subpixelantialias"

[font.features]
"MonoLisa Nerd Font" = [ "+ss01", "+ss07", "+ss11", "-calt", "+ss09", "+ss02", "+ss14" ]
